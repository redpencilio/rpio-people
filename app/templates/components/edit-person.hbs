{{#paper-tabs
   primary=true
   borderBottom=true
   selected=selectedChapter
   onChange=(action (mut selectedChapter)) as |tabs|}}
  {{#tabs.tab value="core"}}Core info{{/tabs.tab}}
  {{#tabs.tab value="roles"}}Company roles{{/tabs.tab}}
  {{#tabs.tab value="accounts"}}User accounts{{/tabs.tab}}
{{/paper-tabs}}

{{#liquid-bind selectedChapter class="md-padding dynamic-animation" as |chapter|}}
  {{#if (eq chapter "core")}}
    {{edit-person/core person=person}}
  {{/if}}

  {{#if (eq chapter "roles")}}
    {{edit-person/roles person=person removeRole=(action "removeRole") addRole=(action "addRole")}}
  {{/if}}
  {{#if (eq chapter "accounts")}}
    {{edit-person/accounts person=person removeAccount=(action "removeAccount") addAccount=(action "addAccount")}}
  {{/if}}
{{/liquid-bind}}


